@model IEnumerable<MvcWardrobe.Top>

@{
    ViewBag.Title = "Index";
}

<h2> Tops </h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<hr />

<div class="row">
@foreach (var item in Model) {

    <div class="col-md-4" style="text-align:center;">

        <div>
            <a href="~/Tops/Details/@item.TopId/">
                <img src="@Url.Content(item.Photo)" style="height:200px;width:auto;" />
            </a>
        </div>

        <div>
            <b>@Html.DisplayFor(modelItem => item.Name)</b>
        </div>

        <div>
            @Html.ActionLink("Details", "Details", new { id = item.TopId })
        </div>
    </div>
}
</div>
